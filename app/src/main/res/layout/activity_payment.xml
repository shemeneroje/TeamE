<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/payment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Payment Details"
        android:textSize="22sp"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/card_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:inputType="number"
        android:maxLength="16"
        android:backgroundTint="#1E88E5"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/payment_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/billing_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Billing Address"
        android:inputType="text"
        android:backgroundTint="#1E88E5"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/card_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/expiry_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Expiry Month (MM)"
        android:inputType="number"
        android:maxLength="2"
        android:backgroundTint="#1E88E5"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/billing_address"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/expiry_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Expiry Year (YY)"
        android:inputType="number"
        android:maxLength="2"
        android:backgroundTint="#1E88E5"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/billing_address"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/cvv_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:inputType="numberPassword"
        android:maxLength="3"
        android:backgroundTint="#1E88E5"
        android:textColor="#000000"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/expiry_month"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/confirm_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subscribe Now!"
        android:backgroundTint="#1E88E5"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/cvv_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>